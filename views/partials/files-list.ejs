<% if (files.length > 0) { %>
  <li class="list-group-item bg-light d-flex justify-content-between align-items-center">
    <strong class="col">ðŸ“„ Files</strong>
    <div class="col-1 text-muted text-center mb-0"><small>Size</small></div>
    <div class="row col-3 justify-content-end">
      <div class="col-1"></div>
      <small class="col-11 text-muted text-center">Last Updated</small>
    </div>
  </li>
  <% files.forEach(file => { %>
    <li class="list-group-item d-flex align-items-center">
      <%- include("./file-options", { file }) %>
      <strong class="col-5 ms-3 flex-grow-1"><a href="/files/<%= file.id %>"><%= file.name %></a></strong>
      <div class="col-1 text-muted text-center">
        <%= filesize(file.size, {round: 2}) %>
      </div>
      <div class="row col-3 justify-content-end">
        <div class="col-1"></div>
        <small class="col-11 text-muted text-center"><%= file.updatedAt.toLocaleString() %></small>
      </div>
    </li>
  <% }) %>
<% } %>
