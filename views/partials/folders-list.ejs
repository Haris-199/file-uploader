<% if (folders.length > 0) { %>
  <li class="list-group-item bg-light d-flex justify-content-between align-items-center">
    <strong>📁 Folders</strong>
    <div class="row col-3 justify-content-end">
      <div class="col-1"></div>
      <small class="col-11 text-muted text-center">Last Updated</small>
    </div>
  </li>
  <% folders.forEach(folder => { %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <strong class="col-5">
        <a href="/folders/<%= folder.id %>"><%= folder.name %></a>
      </strong>
      <div class="row col-3 justify-content-end">
        <div class="col-1"></div>
        <small class="col-11 text-muted text-center"><%= folder.createdAt.toLocaleString() %></small>
      </div>
    </li>
  <% }) %>
<% } %>
