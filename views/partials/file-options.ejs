<div class="dropdown col-auto">
  <button class="btn btn-outline-secondary m-0 py-0 px-1 border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">â‹®</button>
  <ul class="dropdown-menu">
    <li>
      <form class="btn dropdown-item py-1 px-3" action="/files/<%= file.id %>/download" method="GET">
        <button class="btn p-0 border-0"><i class="bi bi-cloud-download me-1"></i> Download</button>    
      </form>
    </li>
    <li><a class="btn dropdown-item" data-bs-toggle="modal" data-bs-target="#rename-file<%= file.id %>-modal"><i class="bi bi-pencil-square me-1"></i> Rename</a></li>
    <li><a class="btn dropdown-item text-danger" data-bs-toggle="modal" data-bs-target="#delete-file<%= file.id %>-modal"><i class="bi bi-trash3 me-1"></i> Delete</a></li>
  </ul>
</div>

<div class="modal fade" id="rename-file<%= file.id %>-modal" tabindex="-1" aria-labelledby="rename-file<%= file.id %>-modal-label" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="rename-file<%= file.id %>-modal-label"><i class="bi bi-pencil-square"></i> Rename File </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <label for="file<%= file.id %>_new_name" class="form-label">New File Name</label>
        <input name="file<%= file.id %>_new_name" id="file<%= file.id %>_new_name" placeholder="New File Name" required class="form-control" value="<%= file.name %>">
        <div class="invalid-feedback"></div>
        <div class="d-flex justify-content-center gap-2 mt-3">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" id="file-<%= file.id %>-rename-btn" onclick="onFileRename('<%= file.id %>', '<%= file.name %>')">Rename</button>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="delete-file<%= file.id %>-modal" tabindex="-1" aria-labelledby="delete-file<%= file.id %>-modal-label" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="delete-file<%= file.id %>-modal-label"><i class="bi bi-trash3"></i> Delete File</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-center">
        <div class="mb-3">
          <h4 class="fw-bold">Are you sure you want to delete "<%= file.name %>"?</h4>
          <p class="text-danger fw-semibold">This action is irreversible.</p>
        </div>
        <div class="d-flex justify-content-center gap-2">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-danger" onclick="onFileDelete('<%= file.id %>', '<%= file.name %>')">Delete</button>
        </div>
      </div>
    </div>
  </div>
</div>
